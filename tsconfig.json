{
  "compilerOptions": {
    "target": "es6",   
    "module": "commonJS",   
    //"typeRootes": [], 
    "rootDirs": [
      "./src",
      "./db"
    ],
    "outDir": "./dist",
    "newLine": "lf",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true,                                
  },

  "exclude":["node_modules"],
}
